<header>
  <h1>Kara<strong>Joker</strong></h1>
  <form id="search" data-ng-submit="search()">
    <input id="query" name="q" type="text" placeholder="Search for a karaoke video" data-ng-model="query">
    <input id="submit" type="image" src="/images/search.png" alt="Search">
  </form>
  <nav>
    <a id="play">{{ state }}</a>
    <a id="pause">Pause</a>
  </nav>
</header>

<div id="results">
  <div class="video" data-ng-repeat="result in results">
    <p class="video-title">{{ result.title }}</p>
    <p class="video-author">{{ result.author }}</p>
    <p class="video-author">{{ result.year }}</p>
    <b class="video-description" data-ng-repeat="tag in result.tags">{{tag.name}}{{$last ? '' : ', '}}</b>
  </div>
</div>

<div id="player"><div id="placeholder"></div></div>
<div id="playlist"></div>

<footer>
  <em>NONOSofT s.a.</em>
</footer>
